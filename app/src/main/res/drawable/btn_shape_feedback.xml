<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <gradient
                android:endColor="#3FF38A"
                android:gradientRadius="300dp"
                android:type="radial"
                android:startColor="#2CEA7B" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle">
            <gradient
                android:endColor="@color/colorFeedback"
                android:gradientRadius="50dp"
                android:type="radial"
                android:startColor="#3FF38A" />

            <corners android:radius="15dp" />

            <stroke
                android:width="4dp"
                android:color="@color/colorFeedback" />
        </shape>
    </item>
</selector>
