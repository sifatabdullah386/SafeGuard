<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@color/colorTotalList">
        <shape
            android:shape="rectangle">
            <gradient
                android:endColor="#F372AB"
                android:gradientRadius="300dp"
                android:type="radial"
                android:startColor="#F372AB" />

            <corners android:radius="15dp" />

        </shape>
    </item>
    <item android:color="@color/white">
        <shape
            android:shape="rectangle">
            <gradient
                android:endColor="@color/colorSexualHarassment"
                android:gradientRadius="50dp"
                android:type="radial"
                android:startColor="#F372AB" />

            <corners android:radius="15dp" />

            <stroke
                android:width="4dp"
                android:color="@color/colorSexualHarassment" />
        </shape>
    </item>
</selector>
