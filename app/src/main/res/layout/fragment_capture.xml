<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottommenu.Capture">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:weightSum="3"
      android:orientation="vertical">
      <ImageView
          android:id="@+id/image_capture"
          android:layout_width="match_parent"
          android:layout_height="400dp"
          android:background="#D1D6D6"
          android:layout_margin="5dp"
          android:src="@drawable/ic_image_black_24dp"
          android:layout_weight="1"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="2"
          android:layout_weight="1"
          android:orientation="horizontal">
          <LinearLayout
              android:id="@+id/image_upload_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="3dp"
              android:layout_weight="1"
              android:background="#131111"
              android:orientation="horizontal">
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:background="#131111"
                  android:padding="10dp"
                  android:src="@drawable/ic_add_to_photos_black_24dp"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:textColor="#fff"
                  android:textAlignment="center"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:paddingTop="10dp"
                  android:fontFamily="monospace"
                  android:text="@string/upload_from_gallery" />
          </LinearLayout>
          <LinearLayout
              android:id="@+id/image_capture_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="3dp"
              android:layout_weight="1"
              android:orientation="horizontal">
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:background="#131111"
                  android:padding="10dp"
                  android:src="@drawable/ic_photo_camera_black_24dp"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:background="#131111"
                  android:textColor="#fff"
                  android:textStyle="bold"
                  android:textAlignment="center"
                  android:textSize="12sp"
                  android:paddingTop="10dp"
                  android:fontFamily="monospace"
                  android:text="@string/take_a_criminal_picture" />
          </LinearLayout>

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="2"
          android:layout_weight="1"
          android:orientation="horizontal">
          <LinearLayout
              android:id="@+id/video_upload_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#673AB7"
              android:layout_margin="3dp"
              android:layout_weight="1"
              android:orientation="horizontal">
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:padding="10dp"
                  android:src="@drawable/ic_videocam_black_24dp"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:textColor="#fff"
                  android:textStyle="bold"
                  android:textAlignment="center"
                  android:textSize="12sp"
                  android:paddingTop="15dp"
                  android:fontFamily="monospace"
                  android:text="@string/record_video" />
          </LinearLayout>
          <LinearLayout
              android:id="@+id/audio_record_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="3dp"
              android:layout_weight="1"
              android:background="#4CAF50"
              android:orientation="horizontal">
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:padding="10dp"
                  android:src="@drawable/ic_mic_black_24dp"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:textColor="#fff"
                  android:textAlignment="center"
                  android:textStyle="bold"
                  android:paddingTop="15dp"
                  android:textSize="12sp"
                  android:fontFamily="monospace"
                  android:text="@string/record_audio" />
          </LinearLayout>

      </LinearLayout>
  </LinearLayout>

</FrameLayout>