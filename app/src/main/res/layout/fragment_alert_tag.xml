<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomMenu.AlertTag">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:weightSum="4"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/fire_station_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/colorFireServices">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:background="@drawable/btn_shape_fire_station"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                android:padding="30dp"
                                android:src="@drawable/emergency_fire_services" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="2dp"
                                android:layout_weight="1"
                                android:text="@string/fire_station"
                                android:textColor="@color/colorHelpListText"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorHelpLisView"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/feed_back_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/colorFeedback">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/btn_shape_feedback"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/feed_back"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                android:padding="25dp"
                                android:src="@drawable/ic_feedback_black_24dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="@string/feed_back"
                                android:textSize="13sp"
                                android:layout_weight="1"
                                android:textColor="@color/colorHelpListText"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorHelpLisView"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/police_stations_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/colorPoliceStation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/btn_shape_police_station"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:padding="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/emergency_police_station" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="@string/police_station"
                                android:textSize="13sp"
                                android:layout_weight="1"
                                android:textColor="@color/colorHelpListText"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorHelpLisView"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/medical_emergency_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/colorEmergencyMedical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/btn_shape_emergency_medical"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:padding="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/emergency_medical" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="@string/emergency_medical"
                                android:textSize="13sp"
                                android:layout_weight="1"
                                android:textColor="@color/colorHelpListText"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorHelpLisView"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/sexual_harassment_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/colorSexualHarassment"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/btn_shape_sexual_harassment"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:padding="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/emergency_sexual_harassment" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="@string/sexual_harassment"
                                android:textSize="13sp"
                                android:layout_weight="1"
                                android:textColor="@color/colorHelpListText"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorHelpLisView"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/traffic_accident_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/colorTrafficAccident">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/btn_shape_traffic_accidents"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:padding="15dp"
                                android:layout_weight="1"
                                android:src="@drawable/emergency_traffic_accident" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="@string/traffic_accident"
                                android:textSize="13sp"
                                android:layout_weight="1"
                                android:textColor="@color/colorHelpListText"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/colorHelpLisView"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                    <Button
                        android:id="@+id/button_help"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/btn_shape_help"
                        android:gravity="center"
                        android:text="@string/panic_button"
                        android:textColor="#F5EDED"
                        android:textSize="18sp"
                        android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
