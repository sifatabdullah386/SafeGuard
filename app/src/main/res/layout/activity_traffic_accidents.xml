<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeScreen.SexualHarassment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/traffic_accidents_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorTrafficAccident"
        android:elevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Request For Traffic Accident Help"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/traffic_accidents_message_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="80dp"
            android:padding="12dp"
            android:textAlignment="center"
            android:hint="Write some message or you can left as blank" />
        <Button
            android:id="@+id/traffic_accidents_help_request"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_shape_traffic_accidents"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:text="Request for Traffic Accident help"
            android:textColor="#fff" />
    </FrameLayout>
</LinearLayout>



