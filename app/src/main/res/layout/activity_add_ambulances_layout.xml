<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".admin.addAmbulances">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/add_ambulances_toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/colorAmbulances"
      android:elevation="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/drawer_ambulances"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />
  </androidx.appcompat.widget.Toolbar>

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#f3f1f4"
        android:weightSum="7"
        android:elevation="18dp"
        android:layout_gravity="center">

      <EditText
          android:id="@+id/add_ambulance_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:layout_weight="1"
          android:ems="10"
          android:textStyle="bold"
          android:textSize="18sp"
          android:inputType="textPersonName"
          android:hint="@string/add_ambulance_name"
          android:importantForAutofill="no" />

      <EditText
          android:id="@+id/add_ambulance_location"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:textSize="18sp"
          android:padding="10dp"
          android:layout_weight="1"
          android:ems="10"
          android:inputType="textMultiLine"
          android:hint="@string/ambulance_location"
          android:importantForAutofill="no" />

      <EditText
          android:id="@+id/add_ambulance_phone_number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="@string/ambulance_phone_number"
          android:inputType="phone"
          android:padding="10dp"
          android:textSize="18sp"
          android:textStyle="bold"
          android:importantForAutofill="no" />

      <EditText
          android:id="@+id/add_ambulance_email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="@string/ambulance_email"
          android:inputType="textEmailAddress"
          android:padding="10dp"
          android:textSize="18sp"
          android:textStyle="bold"
          android:importantForAutofill="no" />
      <Spinner
          android:id="@+id/add_ambulances_type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:entries="@array/add_ambulances_type"
          android:padding="10dp" />

      <EditText
          android:id="@+id/add_ambulance_description"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:ems="10"
          android:hint="@string/ambulance_description"
          android:inputType="text|textMultiLine"
          android:padding="10dp"
          android:textSize="18sp"
          android:textStyle="bold"
          android:importantForAutofill="no" />
      <Button
          android:id="@+id/add_ambulance_submit"
          style="@style/Widget.AppCompat.Button.Colored"
          android:layout_marginTop="20dp"
          android:layout_width="300dp"
          android:layout_weight="1"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:backgroundTint="@color/colorAmbulances"
          android:backgroundTintMode="src_over"
          android:textStyle="bold"
          android:textSize="26sp"
          android:elevation="8dp"
          android:text="@string/register" />

    </LinearLayout>
</LinearLayout>