<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".addPoliceStations">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/add_police_station_toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="#3F51B5"
      android:elevation="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">
    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:text="@string/drawer_add_police_stations"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>
  </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#f3f1f4"
        android:weightSum="8"
        android:elevation="18dp"
        android:layout_gravity="center">

      <EditText
          android:id="@+id/add_police_station_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="Police Station Name"
          android:inputType="textPersonName"
          android:padding="10dp"
          android:textSize="18sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/add_police_station_location"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="Police Station Location"
          android:inputType="textMultiLine"
          android:padding="10dp"
          android:textSize="18sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/add_police_station_phone_number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="Police Station Phone Number"
          android:inputType="phone"
          android:padding="10dp"
          android:textSize="18sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/add_police_station_email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="Police Station Email"
          android:inputType="textEmailAddress"
          android:padding="10dp"
          android:textSize="18sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/add_police_station_description"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:ems="10"
          android:hint="Police Station Description"
          android:inputType="text|textMultiLine"
          android:padding="10dp"
          android:textSize="18sp"
          android:textStyle="bold" />
      <Button
          android:id="@+id/add_police_station_submit"
          style="@style/Widget.AppCompat.Button.Colored"
          android:layout_marginTop="30dp"
          android:layout_width="300dp"
          android:layout_weight="1"
          android:layout_height="70dp"
          android:layout_gravity="center"
          android:backgroundTint="#3F51B5"
          android:backgroundTintMode="src_over"
          android:textStyle="bold"
          android:textSize="26sp"
          android:elevation="8dp"
          android:text="@string/register" />
    </LinearLayout>
</LinearLayout>