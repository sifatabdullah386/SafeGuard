<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addOrganizations">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_charity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/organization_bar"
        android:elevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/add_organizations"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="18dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="8">

            <EditText
                android:id="@+id/add_organization_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/organization_name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_organization_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/organization_location"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_organization_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/organization_phone_number"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/add_organization_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/organization_email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/add_organization_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/add_organization_type"
                android:padding="10dp" />
            <EditText
                android:id="@+id/add_organization_description"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/organization_description"
                android:inputType="text|textMultiLine"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/add_organization_submit"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/organization_bar"
                android:elevation="120dp"
                android:text="@string/register"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

</LinearLayout>