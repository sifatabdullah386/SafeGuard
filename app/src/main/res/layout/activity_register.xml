<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282929"
    tools:context=".RegisterActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/helloText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="@string/app_name"
            android:textSize="40sp"
            android:fontFamily="cursive"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="User Name"
            android:textSize="15sp"
            android:textColorHint="#fff"
            android:backgroundTint="#FF5722"
            android:textColor="#fff"
            android:inputType="textPersonName"/>
        <EditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Phone Number"
            android:textSize="15sp"
            android:textColorHint="#fff"
            android:backgroundTint="#FF5722"
            android:textColor="#fff"
            android:inputType="textPhonetic"
            tools:ignore="TextFields" />
        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Current Address"
            android:textSize="15sp"
            android:textColorHint="#fff"
            android:backgroundTint="#FF5722"
            android:textColor="#fff"
            android:inputType="textMultiLine"/>
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Email"
            android:textSize="15sp"
            android:textColorHint="#fff"
            android:backgroundTint="#FF5722"
            android:textColor="#fff"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Password"
            android:textColorHint="#fff"
            android:backgroundTint="#FF5722"
            android:textColor="#fff"
            android:textSize="15sp"
            android:inputType="textPassword"/>
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/app_bar_baackground"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="sign up"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_already_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:background="#0D7014"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Already sign up?"
                android:textSize="14sp">
            </Button>
            <Button
                android:id="@+id/button_guest_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:background="#AC0505"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Guest Login"
                android:textSize="14sp">
            </Button>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>